
    expdir = '/Volumes/tj/chrap-project/20160114/201601140002_rando_chrap-curve';
    
    cd(expdir)
    
    close all
    
    
    f1 = figure('Position', [90 301 908 617], 'Color', 'w', 'visible', 'on');
    set(f1,'Units', 'Inches');
    pos = get(f1, 'Position');
    set(f1,'PaperPositionMode','Auto','PaperUnits','Inches','PaperSize',[pos(3), pos(4)])

    load('metadata.mat')
    load('summary_data.mat')
    
    light_conditions = {'-5', '-4', '-3', '-2', '-1', '0'};
    xvals = 1:3;
    
    cMap = [141, 211, 199; ...
        255, 255, 179; ...
        190, 186, 218; ...
        251, 128, 114; ...
        128, 177, 211; ...
        253, 180, 98]./255;
    
    
    jitter_vals = .075*randn(length(light_conditions));
    jitter_vals = sort(jitter_vals);
    
    plot([-100 100], [0 0], 'k', 'linewidth', 2)
    hold on
    
    
    s1 = subplot(1,3,1:2)
    
    for ii = 1:6
       
        jval = jitter_vals(ii);
        plot(xvals+jval, per_trial(ii).mean_by_trial, 'LineWidth', 6, 'Color', 'k')
        p_h{ii} = plot(xvals+jval, per_trial(ii).mean_by_trial, 'LineWidth', 5, 'Color', cMap(ii,:));
        hold on
        
        z1 = scatter(xvals+jval, per_trial(ii).mean_by_trial, 600);
        set(z1, 'MarkerEdgeColor', 'k', 'MarkerFaceColor', cMap(ii,:));
        
    end
    
        plot([-100 100], [0 0], 'k', 'linewidth', 1)

        
    xlim([.75 3.25])
    ylim([-1 1])
    
    box off
    
 l_h = legend([p_h{1}, p_h{2}, p_h{3}, p_h{4}, p_h{5}, p_h{6}], 'p = -5', 'p = -4', 'p = -3', 'p = -2', 'p = -1', 'p = 0')
 set(l_h, 'position', [.65 .6 .2 .3], 'font size')